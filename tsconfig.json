{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020", "lib": [ "es2020" ],
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [ "./**/*.ts" ]
}